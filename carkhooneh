CREATE TABLE `herbNoutfitter`.`site_bg` (
  `id` INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  `name` VARCHAR(45),
  `type` VARCHAR(45),
  `dimensions` VARCHAR(45),
  `image` LONGBLOB,
  PRIMARY KEY (`id`)
)
ENGINE = InnoDB;

CREATE TABLE `herbNoutfitter`.`event_type` (
  `id` INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  `name` VARCHAR(45),
  `title` VARCHAR(45),
  `description` TEXT,
  `start` DATETIME,
  `end` DATETIME,
  `price` DECIMAL,
  `limit` SMALLINT,
  `poster` MEDIUMBLOB,
  `created_by` INTEGER UNSIGNED,
  `status` VARCHAR(45),
  `sort` SMALLINT,
  PRIMARY KEY (`id`)
)
ENGINE = InnoDB;

CREATE TABLE `herbNoutfitter`.`event` (
  `id` INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  `type` INTEGER UNSIGNED,
  `name` VARCHAR(45),
  `title` VARCHAR(45),
  `description` TEXT,
  `start` DATETIME,
  `end` DATETIME,
  `price` DECIMAL,
  `limit` SMALLINT,
  `poster` MEDIUMBLOB,
  `created_by` INTEGER UNSIGNED,
  `status` VARCHAR(45),
  `sort` SMALLINT,
  PRIMARY KEY (`id`)
)
ENGINE = InnoDB;

CREATE TABLE `herbNoutfitter`.`news` (
  `id` INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  `title` VARCHAR(100),
  `content` TEXT,
  `created_by` INTEGER UNSIGNED,
  `status` VARCHAR(45),
  `created_on` TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  PRIMARY KEY (`id`)
)
ENGINE = InnoDB;

CREATE TABLE `herbNoutfitter`.`registration` (
  `id` INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  `user` INTEGER UNSIGNED,
  `event` INTEGER UNSIGNED,
  `event_type` INTEGER UNSIGNED,
  `event_date` DATETIME UNSIGNED,
  `created_on` TIMESTAMP DEFAULT CURRENT_TIMESTAMP,
  `status` VARCHAR(7) DEFAULT 'new',
  PRIMARY KEY (`id`)
) ENGINE=InnoDB;

CREATE TABLE `herbNoutfitter`.`reg_user` (
  `id` INTEGER UNSIGNED NOT NULL AUTO_INCREMENT,
  `registration` INTEGER UNSIGNED,
  `user` INTEGER UNSIGNED,
  `status` VARCHAR(7),
  PRIMARY KEY (`id`)
)
ENGINE = InnoDB;
